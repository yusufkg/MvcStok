@model MvcStok.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30"/>
    </div>
    <div>
        <label>MArka</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Marka giriniz" required=""/>
    </div>
    <div>
        <label>KATEGORİ SEÇİN</label>
       @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" value="" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" value="" />
    </div>
    <br />
    <div>
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>